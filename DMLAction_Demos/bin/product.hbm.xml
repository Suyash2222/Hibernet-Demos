<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
  

<hibernate-mapping>
    <class name="com.mydata.Product" table="dml_product">
        <id name="pid" column="product_id">
            <generator class="assigned"></generator>
        </id>
    
        <property name="pname" column="product_name"></property>
        <property name="cost" column="product_cost"></property>
        <property name="qty" column="product_qty"></property>
    </class>
</hibernate-mapping>
